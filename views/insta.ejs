<%- include("includes/head.ejs") %>
<body>
    <h1><%=`Welcome to the Instagram Page of @${username}` %></h1>
    <button>Follow</button>
    <button>Message</button>

    <h3>Accounts that follow you :</h3>
    <% for(let name of followers){ %>
        <li><%= name %></li>
    <% } %>
    <p>Followers : <%= data.followers %> &nbsp;
    Following : <%= data.following %></p>
    <br>
    <hr>
    <% for(let post of data.posts){ %>
        <img src="<%= post.image %>" alt="Some Image">
        <p>
            Likes : <%= post.likes %> &nbsp;
            Comments : <%= post.comments %></p>
    <% } %>
    <%- include("includes/footer.ejs") %>
</body>
</html>